FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet
    {
        type            turbulentInlet;
        referenceField  uniform (5 0 0);
        fluctuationScale (0.02 0.01 0.01);
        value           uniform (5 0 0);
    }

    outlet
    {
        type            inletOutlet;
        inletValue      uniform (0 0 0);
        value           uniform (0 0 0);
    }

    side
    {
        type            noSlip;
    }

    walls
    {
        type            noSlip;
    }

    symmetry
    {
        type            noSlip;
    }
}

// ************************************************************************* //
